extends ./template/header

block contents
  .container
    .content
      .dataio
        input#read_file(type="file" accept="text/*,text/markdown,application/json")
        input#read_button(type="button" value="ファイル選択")
        input#save_button(type="button" value="保存")
        span#save_name(type="text" contenteditable="true") textfile.txt
        input#clear_button(type="button" value="クリア" style="display:none;")
        input#json_parse_button(type="button" value="JSON")
        input#unique_list(type="button" value="ユニーク")
        input#sort_list(type="button" value="ソート")
        input#replace_show(type="button" value="置換")
      div#information
        span#inputlength=0
        |  &nbsp;/&nbsp;
        input#maxinput(type="text")
        | &nbsp;文字
      #text-container
        textarea#editor
      p#linenav
      #btmfl(style="display:none;")
        input#replace_button(type="button" value="実行")
        .substr
          span="対象: "
          #regex_pattern(type="button" contenteditable="true") //g
        .substr
          span="置換: "
          #replacing_text(type="button" contenteditable="true")
